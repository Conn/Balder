<UserControl x:Class="Balder.Silverlight.TestApp.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:balder="clr-namespace:Balder.Silverlight.Controls;assembly=Balder.Silverlight"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
    >
	<Grid x:Name="LayoutRoot" Width="800" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top">
		<StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
			<StackPanel.Resources>
				<Style x:Key="DebugFont" TargetType="TextBlock">
					<Style.Setters>
						<Setter Property="FontFamily" Value="Verdana"/>
						<Setter Property="FontSize" Value="12"/>
						<Setter Property="Foreground" Value="White"/>
					</Style.Setters>

				</Style>
			</StackPanel.Resources>
			<StackPanel.Background>
				<SolidColorBrush Opacity="0.5" Color="Gray"/>
			</StackPanel.Background>
			<TextBlock x:Name="_hitObject" Style="{StaticResource DebugFont}" Text="0" />
			<TextBlock x:Name="_mousePosition" Style="{StaticResource DebugFont}" Text="0" />
		</StackPanel>

	</Grid>
</UserControl>
